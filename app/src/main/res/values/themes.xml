<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weckerapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_primary</item>
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
    </style>

    <style name="Theme.Weckerapp" parent="Base.Theme.Weckerapp" />

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersTextColor">@color/blue_primary</item>
        <item name="android:numbersBackgroundColor">@android:color/transparent</item>
        <item name="android:numbersSelectorColor">#e9f3fc</item>
        <item name="android:headerBackground">@color/blue_primary</item>
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="colorControlNormal">#e9f3fc</item>
        <item name="colorControlActivated">#e9f3fc</item>
        <item name="android:colorControlNormal">#e9f3fc</item>
        <item name="android:colorControlActivated">#e9f3fc</item>
    </style>
</resources>